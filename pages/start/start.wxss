/* pages/start/start.wxss */
.page{
  width: 100%;
  min-height: 100vh;
  background: #ffffff;
  position: relative;
}
.bg{
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  z-index: 1;
  background:linear-gradient(180deg,rgba(33,32,69,1) 0%,rgba(25,19,43,1) 100%);
}
.page-content{
  position: absolute;
  top: 254rpx;
  /* 128rpx */
  width: 100%;
  text-align: center;
}
.title{
  position: absolute;
  left: 262rpx;
  top: 254rpx;
  width:228rpx;
  height:50rpx;
  font-size:40rpx;
  font-family:FZZDHJW--GB1-0,FZZDHJW--GB1;
  font-weight:normal;
  color:rgba(255,255,255,1);
  line-height:50rpx;
  letter-spacing:8rpx;
  text-align: center;
  z-index: 2;
}
.content{
  position: absolute;
  top: 544rpx;
  width: 100%;
  text-align: center;
  z-index: 2;
}
.logo{
  width: 156rpx;
  height: 156rpx;
}
.tip{
  margin: 66rpx;
  font-size:24rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(255,255,255,1);
  line-height:34rpx;
  letter-spacing:5rpx;
}
.footer{
  position: absolute;
  width: 100%;
  bottom: 86rpx;
  text-align: center;
  font-size:24rpx;
  font-family:PingFangSC-Regular,PingFang SC;
  font-weight:400;
  color:rgba(104,104,104,1);
  z-index: 2;
}