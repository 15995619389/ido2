/* pages/record/record.wxss */
.record-page{
  overflow: hidden;
  width: 100%;
  position: absolute;
  height: 100%;
}
.record-box{
  padding: 0 60rpx;
}
.page-header{
  text-align: center;
  padding: 300rpx 0 62rpx;
  overflow: hidden;
}
.page-header .header_img{
  width: 68rpx;
  height: 64rpx;
  margin: 0 auto;
}
.page-header .header_title,.footer_title{
  margin-top: 14rpx;
  height:44rpx;
  font-size:32rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(47,47,47,1);
  line-height:44rpx;
}
.tip{
  height:40rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Regular,PingFang-SC;
  font-weight:400;
  color:rgba(137,137,137,1);
  line-height:40rpx;
}
.footer_title{
  color: #8c8c8c;
}
.footer_title{
  color: #7b7b7b;
}
.page-content{
  overflow: hidden;
  text-align: center;
}
.page-content .success_time{
  height:50rpx;
  font-size:36rpx;
  font-family:PingFang-SC-Medium,PingFang-SC;
  font-weight:500;
  color:rgba(51,51,51,1);
  line-height:50rpx;
}
.page-content .success_time text{
  color: #05a5ef;
}
.btn-area button{
  margin-top: 34rpx;
  width: 274rpx !important;
  height: 76rpx;
  line-height: 76rpx;
  font-size:28rpx;
  font-family:PingFang-SC-Bold,PingFang-SC;
  font-weight:bold;
}
button[type='primary'] {
  background-color: #4dc0ff !important;
}
.type_tip {
  text-align: center;
  line-height: 40px;
  padding-left: 250rpx;
  overflow: hidden;
  margin: 18rpx 0 58rpx;
}
.type_tip text{
  float: left;
  font-size: 32rpx;
  line-height: 44rpx;
}
.type_banlv text{
  color: #FF88B6;
}
.type_feiji text{
  color: #F1B91A;
}
.type_mengyi text{
  color: #49C6FF;
}
.type_jinyu text{
  color: #29E17A;
}
.type_tip image{
  width: 40rpx;
  height: 40rpx;
  float: left;
}


.page-footer{
  position: absolute;
  bottom: 40rpx;
}
.footer_item{
  margin-top: 20rpx;
  border: 1px solid #e9e9e9;
  border-radius: 5px;
  padding: 15px;
  font-size: 28rpx;
  color: #3f3f3f;
  line-height: 30px;
  overflow: hidden;
  width: 100%;
}
.btn{
  width: 98rpx !important;
  height: 56rpx;
  line-height: 56rpx;
  text-align: center;
  padding: 0 0;
  font-size: 26rpx;
  font-weight: 400;
  border: 1px solid #49c6ff;
  color: #49c6ff;
  float: left;
}
button[type='default'][plain] {
  border: 1px solid #49c6ff;
  color: #49c6ff;
}
